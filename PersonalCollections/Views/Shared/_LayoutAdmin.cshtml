<!DOCTYPE html>
<html lang="en">

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>

<body id="page-top">
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                <div class="sidebar-brand-text mx-3">@User.Identity.Name</div>
            </a>

            <hr class="sidebar-divider my-0">

            <li class="nav-item">
                <a class="nav-link" href="index.html">
                    <i class="fa fa-home fa-fw"></i>
                    <span>@Localizer["Home"]</span>
                </a>
            </li>

            <div class="sidebar-heading">
                @Localizer["Lists"]
            </div>

            <li class="nav-item">
                <a class="nav-link" asp-action="ListUsers">
                    <i class="fas fa-fw fa-male"></i>
                    <span>@Localizer["Client"]</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="ListCollection">
                    <i class="fas fa-fw fa-book"></i>
                    <span>@Localizer["Collections"]</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="ListThemas">
                    <i class="fas fa-fw fa-journal-whills"></i>
                    <span>@Localizer["Categories"]</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="container">

                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                        @await Html.PartialAsync("_SelectLanguagePartial")


                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small fa fa-meh">@User.Identity.Name</span>
                            </a>

                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a asp-area="Identity" asp-action="index" asp-controller="manage" class="dropdown-item">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    @Localizer["Profile"]
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                    @Localizer["Settings"]
                                </a>
                                <div class="dropdown-divider"></div>
                                <form class="form-inline" asp-area="Identity" asp-action="logout" asp-controller="account" )">
                                    <button class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                        <i type="submit" class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        @Localizer["Logout"]
                                    </button>
                                </form>
                            </div>
                        </li>

                    </ul>

                </nav>

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/CustomScript.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
    @RenderSection("Scripts", required: false)
</body>


</html>

