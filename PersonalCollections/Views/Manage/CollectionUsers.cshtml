@model IEnumerable<CollectionItem>
@{
    ViewData["Title"] = "CollectionUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-5">
    <div class="card-body">
        <div class="d-md-flex">
            <div class="nav flex-column nav-pills mr-4 mb-3 mb-sm-0" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a asp-action="Manage" asp-controller="Index" class="nav-link" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Home</a>
                <a asp-action="CreateCollection" asp-controller="Collection" class="nav-link" aria-controls="v-pills-home">Добавить коллекцию</a>
                <a class="nav-link active" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Collection</a>
                <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Settings</a>
            </div>
            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Таблица тем</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <td>Название</td>
                                        <td>Описание</td>
                                        <td>Тема</td>
                                        <td>Количество</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <td>Название</td>
                                        <td>Описание</td>
                                        <td>Тема</td>
                                        <td>Количество</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.NameCollection</td>
                                            <td>@item.Description</td>
                                            <td>@item.Themas.Name</td>
                                            <td>@item.Items.Count</td>
                                            <td>
                                                <a asp-controller="Collection" asp-action="EditCollection" asp-route-id="@item.IdCollection" class="fa fa-edit">Изменить</a>
                                                <a asp-controller="Collection" asp-action="DeleteCollection" asp-route-id="@item.IdCollection" type="submit" class="fa fa-trash">Удалить</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
