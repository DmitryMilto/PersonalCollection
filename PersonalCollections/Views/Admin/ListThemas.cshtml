@model IEnumerable<Thema>

@{
    ViewData["Title"] = "ListThemas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@Localizer["List"]</h1>
    <a asp-action="CreateThema" class="d-none btn d-inline btn-sm btn-primary shadow-sm">
    <i class="fas fa-plus fa-sm text-white-50"></i>@Localizer["Create"]</a>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Localizer["Table"]</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Localizer["Name"]
                        </th>
                        <th>
                            @Localizer["Description"]
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Localizer["List"]
                        </th>
                        <th>
                            @Localizer["Description"]
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.IdThema">@Localizer["Edit"]</a>
                        </td>
                        <td class="text-center">
                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.IdThema" type="submit">@Localizer["Delete"]</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
