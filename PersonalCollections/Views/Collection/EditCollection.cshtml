@model PersonalCollections.Models.CollectionItem

@{
    ViewData["Title"] = "EditCollection";
    ViewData["Title"] = "CreateCollection";
    if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    else
        Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Image = Model.Image;
}

<h1>EditCollection</h1>

<h4>CollectionItem</h4>
<hr />
<div class="row">
    <div class="col-8">
        <form asp-action="EditCollection" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCollection" />
            <div class="form-group d-block">
                <label asp-for="NameCollection" class="control-label"></label>
                <input asp-for="NameCollection" class="form-control" />
                <span asp-validation-for="NameCollection" class="text-danger"></span>
            </div>
            <div class="form-group d-block">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group d-block">
                @Html.DropDownListFor(model => model.IdThema, ViewBag.Thema as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input asp-for="Image" class="form-control" disabled />
                <input type="file" name="uploadedFile" /><br>
                @if (Model.Image == null)
                {
                    <div class="form-control-static">Нет картинки</div>
                }
                else
                {
                    <img class="img-thumbnail img-fluid" width="150" height="150"
                         src="@Url.Content(Model.Image)" />
                }
            </div>
            
            <div class="form-group d-block">
                <input asp-route-Image="@Model.Image" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-4">
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
        <a asp-controller="admin"  asp-action="ListCollection">Back to List</a>
        }
        else
        {
        <a asp-controller="manage" asp-action="Index">Back to List</a>
        }
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List Item's</h6>
        <a asp-action="CreateItem" asp-route-id="@Model.IdCollection" class="d-none d-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i>Добавить коллекцию</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NameItem)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.IdItem">Edit</a>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.IdItem">Details</a>
                            </td>
                            <td class="text-center">
                                <a asp-action="Delete" asp-route-id="@item.IdItem">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>