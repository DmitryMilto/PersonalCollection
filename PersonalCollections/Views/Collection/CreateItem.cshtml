@model PersonalCollections.Models.Item

@{
    ViewData["Title"] = "CreateItem";
    ViewData["Title"] = "CreateCollection";
    if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    else
        Layout = "~/Views/Shared/_Layout.cshtml";
    var IdCollectionItem = ViewBag.Id;
}

    <h1>@ViewBag.Id</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameItem" class="control-label"></label>
                <input asp-for="NameItem" class="form-control" />
                <span asp-validation-for="NameItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-route-IdCollectionItem="@IdCollectionItem" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EditCollection" asp-route-IdCollectionItem="@IdCollectionItem">Back to List</a>
</div>

